{
  "name": "placement-portal",
  "version": "1.0.0",
  "description": "AI-Enabled College Placement Management System",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:ai\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "dev:ai": "cd ai-service && python app.py",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install && cd ../ai-service && pip install -r requirements.txt",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "lint": "cd client && npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "placement",
    "management",
    "ai",
    "resume-parser",
    "job-portal"
  ],
  "author": "PlaceMe Team",
  "license": "MIT"
}
